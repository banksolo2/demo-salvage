<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 text-center">
                <h4 class="uppercase mb16">Contained Tiles</h4>
                <p class="lead mb80">
                    These multipurpose tiles make ideal presentations for project showcases or as links to auxilary pages around your site.
                </p>
            </div>
        </div>
        <div class="row">
           <div class="col-md-8 col-sm-10 col-sm-offset-1 col-md-offset-2">
                <% for(let item of items){ %> 
                <div class="horizontal-tile">
                    <div class="tile-left">
                        <a href="#">
                            <div class="background-image-holder">
                                <img alt="image" class="background-image" src="/upload/frontImage/<%= item.item_id %>/<%= item.front_image %>">
                            </div>
                        </a>
                    </div>
                    <div class="tile-right bg-secondary">
                        <div class="description">
                            <h5 class="mb8"><%= item.name %> </h5>
                            <div class="uppercase">Brand : <%= item.brand %> </div>
                            <div class="uppercase">State : <%= item.state %> </div><br/>
                            <a class="btn" href="/make-bid-form/<%= item.item_id %>">Make Bid</a>
                        </div>
                    </div>
                </div>
                <% } %> 
                <div class="text-center mt40">
                    <ul class="pagination">
                        <% if(page > 1){ %> 
                        <li>
                            <a href="/?page=<%= (Number(page) - 1) %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% } %> 
                        <% for(let i = 1; i <= Number(noOfPages); i++){ %> 
                            <% if(i === Number(page)){ %> 
                            <li class="active"> 
                                <a href="/?page=<%= i %>"><%= i %> </a>
                            </li> 
                            <% }else{ %>
                                <li> 
                                    <a href="/?page=<%= i %>"><%= i %> </a>
                                </li> 
                            <% } %>  
                        <% } %>
                        <% if(Number(noOfPages) !== Number(page)){ %>  
                        <li>
                            <a href="/?page=<%= (Number(page) + 1) %>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        <% } %> 
                    </ul>
                </div>
           </div>
           
        </div>
    </div>
</section>
<section class="page-title page-title-2 image-bg overlay parallax">
    <div class="background-image-holder">
        <img alt="Background Image" class="background-image" src="/frontend/img/cover15.jpg">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="uppercase mb8">Large Image</h2>
                <p class="lead mb0">A descriptive subtitle for your page.</p>
            </div>
            <div class="col-md-6 text-right">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active">
                        Make Bid
                    </li>
                </ol>
            </div>
        </div>
        
    </div>
    
</section>
<section>
    <div class="container">
        <div class="product-single">
            <div class="row mb24 mb-xs-48">
                <div class="col-md-5 col-sm-6">
                    <div class="image-slider slider-thumb-controls controls-inside">
                                                                                                                        
                                                            
                       
                        <ul class="slides">
                            <% gallery.forEach((image)=>{ %> 
                            <li><img src="/upload/gallery/<%= item.item_id %>/<%= image.image %>"/> </li>
                            <% }); %> 
                        </ul>
                        
                    </div>
                
                </div>
                <div class="col-sm-6 col-md-5 col-md-offset-1">
                    <div class="description">
                        <h4 class="uppercase"><%= item.name %> </h4>
                        <!-- div class="mb32 mb-xs-24">
                            <span class="number price old-price">$149.95</span>
                            <span class="number price">$119.95</span>
                        </div -->
                        <!--p>
                            Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem
                            aperiam, eaque ipsa quae ab illo inventore veritatis.
                        </p-->
                        <ul>
                            <li><strong>REG NO:</strong> <%= item.reg_no %> </li>
                            <li><strong>BRAND:</strong> <%= item.brand %></li>
                            <li><strong>LOCATION:</strong> <%= item.address %> </li>
                            <li><strong>CONTACT PERSON:</strong> <%= item.phone %> </li>
                            <li> <strong>STATE:</strong> <%= item.state %> </li>
                        </ul>
                         
                    </div>
                    <% if(success){ %> 
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Success:</strong> <%= success %>
                    </div>
                    <% } %>
                    <% if(error){ %>  
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>Error:</strong> <%= error %>
                    </div>
                    <% } %> 
                    <form method="post" action="/make-bid">
                        <input type="text"  name="name" placeholder="Full name" required>
                        <input type="text"  name="email" placeholder="Email Address" required >
                        <input type="text"  name="phone" placeholder="Mobile Number" required>
                        <input type="text"  name="amount" placeholder="Bid Amount" required>
                        <textarea  name="narration" rows="4" placeholder="Narration"></textarea>
                        <input type="hidden"  name="itemId" value="<%= item.item_id %>">
                        <!--button type="submit">Bid Now</button-->
                        <input type="submit" value="Bid Now" />
                    </form>
                <!--/div>						<div class="col-sm-6 col-md-5 col-md-offset-1" data-success="Thanks for your submission, we will be in touch shortly." data-error="Please fill all fields correctly."-->
                
                
                </div>
                
            </div>


        </div>

    </div>

</section>